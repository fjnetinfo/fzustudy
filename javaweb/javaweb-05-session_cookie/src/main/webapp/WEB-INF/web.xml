<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
  <servlet>
    <servlet-name>cookies</servlet-name>
    <servlet-class>com.lhn.servlet.CookieDemo01</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>cookies</servlet-name>
    <url-pattern>/cookies</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>cookies-d</servlet-name>
    <servlet-class>com.lhn.servlet.CookieDemo02</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>cookies-d</servlet-name>
    <url-pattern>/cookies-d</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>cookies-3</servlet-name>
    <servlet-class>com.lhn.servlet.CookieDemo03</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>cookies-3</servlet-name>
    <url-pattern>/cookies-3</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>session1</servlet-name>
    <servlet-class>com.lhn.servlet.SessionDemo01</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>session1</servlet-name>
    <url-pattern>/session1</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>session2</servlet-name>
    <servlet-class>com.lhn.servlet.SessionDemo02</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>session2</servlet-name>
    <url-pattern>/session2</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>session3</servlet-name>
    <servlet-class>com.lhn.servlet.SessionDemo03</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>session3</servlet-name>
    <url-pattern>/session3</url-pattern>
  </servlet-mapping>

  <session-config>
    <!--15分钟后Session自动失效-->
    <session-timeout>15</session-timeout>
  </session-config>
</web-app>